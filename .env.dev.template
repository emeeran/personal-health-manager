# Development Environment Configuration Template
# Copy this file to .env.dev and fill in your actual values
# DO NOT commit the actual .env.dev file!

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=phm_dev
DB_USER=phm_dev_user
DB_PASSWORD=your_secure_db_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET_NAME=health-documents-dev
MINIO_SECURE=false

# JWT Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_jwt_secret_key_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
DEBUG=true
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
API_V1_STR=/api/v1

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "png", "jpg", "jpeg", "tiff"]

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract

# Monitoring Configuration
LOG_LEVEL=DEBUG
SENTRY_DSN=  # Optional: enable for development debugging

# AI Configuration (Optional)
OPENAI_API_KEY=  # Optional: your OpenAI API key
ANTHROPIC_API_KEY=  # Optional: your Anthropic API key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-dev-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true