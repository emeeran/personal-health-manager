# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/personal_health_manager
DB_HOST=localhost
DB_PORT=5432
DB_NAME=personal_health_manager
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=health-documents
MINIO_SECURE=false

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-this-should-be-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Configuration (for verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Configuration
ENVIRONMENT=development
DEBUG=true
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
API_V1_STR=/api/v1

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "png", "jpg", "jpeg", "tiff"]

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO